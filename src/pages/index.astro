---
import { Image } from "astro:assets";
import HeroImage from "../assets/hero-image.jpg";
import MainLayout from "../layouts/MainLayout.astro";

const age = Date.now() - Date.UTC(2005);
---

<MainLayout title="Home">
  <div class="flex flex-col gap-4">
    <h1 class="text-4xl">Hi & Welcome to my corner of the web!</h1>
    <Image
      src={HeroImage}
      class="grayscale"
      loading="eager"
      alt="Akbar Dzikri Formal"
    />
  </div>
  <article>
    <h2>
      Hey There I'm Akbar Dzikri, a {Math.floor(age / 31557600000)} y/o Web Developer
      Based in Cirebon, Indonesia
    </h2>
  </article>
</MainLayout>
