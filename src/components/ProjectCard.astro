---
const { project } = Astro.props;
---

<div class="flex flex-col gap-2">
  <a href={"/projects/" + project.slug} class="sm:grid">
    <h3 class="text-xl">{project.data.title}</h3>
    <p class="line-clamp-2">{project.data.description}</p>
  </a>
  <div class="flex flex-col gap-1">
    {
      project.data.demoUrl && (
        <>
          <a
            href={project.data.demoUrl}
            target="_blank"
            class="w-full grid place-items-center hover:bg-colors-primary hover:text-colors-text-secondary border border-colors-accent rounded"
          >
            View Demo
          </a>
        </>
      )
    }
    {
      project.data.repoUrl && (
        <>
          <a
            href={project.data.repoUrl}
            target="_blank"
            class="w-full grid place-items-center hover:bg-colors-secondary border border-colors-accent rounded"
          >
            Source Code
          </a>
        </>
      )
    }
  </div>
</div>
