---
import "../styles/main.css";
import Navbar from "../components/svelte/navbar/Navbar.svelte";

const { title } = Astro.props;
---

<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Akbar Dzikri</title>
  </head>
  <body
    class="flex flex-col bg-colors-background-primary text-colors-text-primary"
  >
    <nav
      class="bg-colors-background-primary py-2 px-4 sticky top-0 z-50 border-b-2 border-colors-text-primary border-dashed"
    >
      <Navbar client:only="svelte" active={title} />
    </nav>
    <main class="py-4 px-8 sm:mx-auto">
      <slot />
    </main>
  </body>
</html>
